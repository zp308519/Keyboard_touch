        <Button x:Name="b_A" Content="A" Grid.Column="0" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_S" Content="S" Grid.Column="1" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
