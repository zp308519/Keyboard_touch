        <Button x:Name="b_M" Content="M" Grid.Column="6" Grid.Row="4" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_Przecinek" Content="," Grid.Column="7" Grid.Row="4" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_Kropka" Content="." Grid.Column="8" Grid.Row="4" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />

        <Button x:Name="b_Enter" Content="Enter" Grid.Column="10" Grid.Row="3" Grid.RowSpan ="2" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_RemoveAll" Content="Remove all" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_Spacja" Content="Space" Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="4" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_Backspace" Content="Backspace" Grid.Column="7" Grid.Row="10" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_Read" Content="Read" Grid.Column="10" Grid.Row="10" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Background="#78f7ff" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />





    </Grid>
</Window>
