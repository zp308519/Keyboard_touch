        <Button x:Name="b_G" Content="G" Grid.Column="4" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_H" Content="H" Grid.Column="5" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_J" Content="J" Grid.Column="6" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_K" Content="K" Grid.Column="7" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
        <Button x:Name="b_L" Content="L" Grid.Column="8" Grid.Row="3" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />

        <Button x:Name="b_Z" Content="Z" Grid.Column="0" Grid.Row="4" FontSize="20" FontWeight="Bold" Background="AntiqueWhite" Margin="2" BorderThickness="3" BorderBrush="Black" KeyDown="SS_KeyDown" />
